<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:WeatherHeroesApp.Pages"
       x:Class="WeatherHeroesApp.AppShell">

    <!-- Home -->
    <FlyoutItem Title="Home" Route="WeatherListPage">
        <ShellContent ContentTemplate="{DataTemplate pages:WeatherListPage}" />
    </FlyoutItem>

    <!-- Login -->
    <FlyoutItem Title="Login" Route="LoginPage">
        <ShellContent ContentTemplate="{DataTemplate pages:LoginPage}" />
    </FlyoutItem>

    <!-- Register -->
    <FlyoutItem Title="Register" Route="RegisterPage">
        <ShellContent ContentTemplate="{DataTemplate pages:RegisterPage}" />
    </FlyoutItem>

    <!-- Logout -->
    <FlyoutItem Title="Logout" Route="LogoutPage">
        <ShellContent ContentTemplate="{DataTemplate pages:LoginPage}" />
    </FlyoutItem>
</Shell>
