<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:WeatherHeroesApp.Pages"
       x:Class="WeatherHeroesApp.AppShell">

    <!-- Home -->
    <FlyoutItem Title="Home" Route="WeatherListPage">
        <ShellContent ContentTemplate="{DataTemplate pages:WeatherListPage}" />
    </FlyoutItem>

    <!-- Manage Cities -->
    <FlyoutItem Title="Manage Cities" Route="ManageCitiesPage">
        <ShellContent ContentTemplate="{DataTemplate pages:ManageCitiesPage}" />
    </FlyoutItem>

    <!-- 5-Day Forecast -->
    <FlyoutItem Title="5-Day Forecast" Route="ForecastPage">
        <ShellContent ContentTemplate="{DataTemplate pages:ForecastPage}" />
    </FlyoutItem>

    <!-- Credits -->
    <FlyoutItem Title="Credits" Route="CreditsPage">
        <ShellContent ContentTemplate="{DataTemplate pages:CreditsPage}" />
    </FlyoutItem>
    
    <!-- Logout -->
    <FlyoutItem Title="Logout" Route="LoginPage">
        <ShellContent ContentTemplate="{DataTemplate pages:LoginPage}" />
    </FlyoutItem>

</Shell>
